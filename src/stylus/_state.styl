.menu__list-item a
  &.is-active
    background-color white
    color $primary-color

.submenu
  &.is-active
    max-height  100vh
    opacity 1
    transition all .5s
    @media screen and (min-width: $min-width-responsive)
      visibility visible
      opacity 1

.header
  &.is-open
    transition all 0.5s
    right calc(100% - calc(100vw - 72px))

.button-toggle
  &.is-visible
    display: block

