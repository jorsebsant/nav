.header
  background $primary-color
  font-family $primary-font
  font-size 21px;  
.nav-wrapper    
  align-items center
  display flex
  max-width 1280px
  margin 0 auto   
.menu__list
  display flex
  justify-content space-evenly
  list-style-type none
  margin 0
.menu__list-item
  a
    color white
    display block
    padding 24px
    text-decoration none
    color
    &:hover
      background-color white
      color $primary-color
.logo
  display inline-block
  max-width 60px
  margin 0
  padding-left: 24px
.logo__img
  max-width 100%